{
	"suggest.minTriggerInputLength": 1,
	"coc.preferences.previewAutoClose": true,
	"diagnostic.infoSign": "i",
	"diagnostic.hintSign": ">",
	"diagnostic.errorSign": "X",
	"diagnostic.warningSign": "!",
	"diagnostic.joinMessageLines": false,
	"diagnostic.refreshAfterSave": false,
	"diagnostic.refreshOnInsertMode": true,
    "suggest.triggerCompletionWait": 300,
    "suggest.floatEnable": true,
    "suggest.timeout": 5000,
    "suggest.detailMaxLength": 1000,
    "rust.show_warnings": true,
    "rust.clippy_preference": "on",
    "rust-client.updateOnStartup": true,
    "rust.cfg_test": true,
    "rust-analyzer.updates.channel": "nightly",
    "rust-analyzer.notifications.cargoTomlNotFound": false,
    "rust-analyzer.checkOnSave.command": "clippy",
    "diagnostic.displayByAle": false,
	"languageserver": {
		"golang": {
			"command": "gopls",
			"filetypes": ["go"],
			"rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
        }
    }
}
