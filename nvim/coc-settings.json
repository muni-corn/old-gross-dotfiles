{
	"suggest.minTriggerInputLength": 1,
	"coc.preferences.previewAutoClose": true,
	"diagnostic.infoSign": "i",
	"diagnostic.hintSign": ">",
	"diagnostic.errorSign": "X",
	"diagnostic.warningSign": "!",
	"diagnostic.joinMessageLines": true,
	"diagnostic.refreshAfterSave": true,
	"diagnostic.refreshOnInsertMode": true,
    "suggest.triggerCompletionWait": 300,
    "suggest.floatEnable": true,
    "suggest.timeout": 5000,
    "rust-analyzer.cargo-watch.enable": true,
    "rust-analyzer.cargoFeatures.allFeatures": true,
    "rust-analyzer.raLspServerPath": "/usr/bin/ra_lsp_server",
    "rust-analyzer.cargo-watch.command": "clippy",
    "rust.show_warnings": true,
    "rust.clippy_preference": "on",
    "rust-client.updateOnStartup": true,
	"languageserver": {
		"golang": {
			"command": "gopls",
			"filetypes": ["go"],
			"rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
        },
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                "stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        }
    }
}
