{
	"suggest.minTriggerInputLength": 1,
	"coc.preferences.previewAutoClose": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.bracketEnterImprove": true,
	"diagnostic.infoSign": "i",
	"diagnostic.hintSign": ">",
	"diagnostic.errorSign": "X",
	"diagnostic.warningSign": "!",
	"diagnostic.refreshAfterSave": false,
	"diagnostic.refreshOnInsertMode": true,
    "suggest.triggerCompletionWait": 300,
    "suggest.floatEnable": true,
    "suggest.timeout": 5000,
    "suggest.detailMaxLength": 1000,
    "rust.show_warnings": true,
    "rust.clippy_preference": "on",
    "rust-client.updateOnStartup": true,
    "rust.cfg_test": true,
    "rust-analyzer.updates.channel": "stable",
    "rust-analyzer.notifications.cargoTomlNotFound": false,
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.callInfo.full": true,
    "diagnostic.displayByAle": false,
    "rust-analyzer.inlayHints.chainingHints": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
