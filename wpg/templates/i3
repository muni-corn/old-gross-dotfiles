exec_always $HOME/.fehbg &
exec_always "killall muse-status-dae; muse-status-daemon &"

set $mod Mod4

# exit sway
bindsym $mod+Shift+e exec paplay "$HOME/Music/MuseSounds/Goodbye.wav" && i3-msg exit

# some convenience variables
set $locker "sh $HOME/.config/i3/lock.sh"
set $lockWarningCmd "notify-send -u low -t 29500 -- 'Are you still there?' 'Your system will lock itself soon.' && paplay $HOME/Music/MuseSounds/LockWarning.wav"

# startup apps
exec picom --experimental-backends &
exec dunst &
exec rot8 --touchscreen ELAN0732:00 04F3:2537 --display eDP &
exec light -I &
exec sh $HOME/.config/wpg/wp_init.sh &
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec redshift &
exec syncthing --no-browser &

# Use custom colors
set $active       #87aacbc0
set $inactive     #5d758cc0
set $warning      #ffaa00
set $warningAlpha #ffaa00c0
set $white        #f2fdff
set $black        #10180ac0
set $gray         #273b18c0
set $opaqueGray   #273b18
set $fadedBlack   #10180ac0
set $transparent  #00000000

set $TERMINAL kitty
set $SHELL /usr/bin/fish

set $screenshot "sh $HOME/.config/i3/screenshot.sh"

# Window colors
# class                 border          backgr.         text            indicator       child_border
client.focused          $inactive       $inactive       $white          $active         $inactive
client.focused_inactive $gray           $gray           $white          $gray           $gray
client.unfocused        $black          $black          $inactive       $black          $black
client.urgent           $warning        $warning        $black          $warning        $warning
client.placeholder      $black          $black          $inactive       $black          $black
client.background       $black
title_align center

# Font for window titles
font pango: Cantarell 10
title_align center

# others
default_orientation auto
focus_follows_mouse yes

# borders and titlebars
default_border pixel 4
default_floating_border pixel 4
for_window [class=".*"] border pixel 4

# floating window size constraints
floating_minimum_size -1 x -1
floating_maximum_size 1856 x 1016

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

set $volume_up $HOME/Music/MuseSounds/Volume.wav
set $volume_down $HOME/Music/MuseSounds/VolumeDown.wav

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master 5%+ unmute && muse-status notify volume; paplay $volume_up"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master 5%- unmute && muse-status notify volume; paplay $volume_down"
bindsym XF86AudioMute exec "amixer sset Master toggle && muse-status notify volume; paplay $volume_up"

# Media player controls
bindsym XF86AudioPlay exec mpc toggle || playerctl play-pause
bindsym XF86AudioNext exec mpc next || playerctl next
bindsym XF86AudioPrev exec mpc cdprev || playerctl previous

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 2 && muse-status notify brightness
bindsym XF86MonBrightnessDown exec light -U 2 && muse-status notify brightness

# Gaps between windows
gaps inner 16
hide_edge_borders none
bindsym $mod+equal "gaps inner all set 16; hide_edge_borders none"
bindsym $mod+minus "gaps inner all set 0; hide_edge_borders smart"

# start a terminal
bindsym $mod+Return exec $TERMINAL

# start rofi
bindsym $mod+a exec rofi -show drun -config ~/.config/rofi/apps_config.rasi
bindsym $mod+Control+e exec rofi -show emoji -modi emoji
bindsym $mod+Control+w exec rofi -show window
bindsym $mod+c exec rofi -show calc -no-sort

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the arrow keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move focused workspace to outputs
bindsym $mod+Control+h move workspace to left
bindsym $mod+Control+j move workspace to down
bindsym $mod+Control+k move workspace to up
bindsym $mod+Control+l move workspace to right

# (arrow keys for moving workspace)
bindsym $mod+Control+Left move workspace to left
bindsym $mod+Control+Down move workspace to down
bindsym $mod+Control+Up move workspace to up
bindsym $mod+Control+Right move workspace to right

# focus outputs
bindsym $mod+Mod1+h focus output left
bindsym $mod+Mod1+j focus output down
bindsym $mod+Mod1+k focus output up
bindsym $mod+Mod1+l focus output right

# (arrow keys for workspace)
bindsym $mod+Mod1+Left focus output left
bindsym $mod+Mod1+Down focus output down
bindsym $mod+Mod1+Up focus output up
bindsym $mod+Mod1+Right focus output right

# close window
bindsym $mod+q kill

# toggle split direction
bindsym $mod+o split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# floating video mode
bindsym $mod+i fullscreen disable; floating enable; resize set 356 200; sticky enable; border pixel 4; move position 1548 px 16 px
bindsym $mod+Shift+i fullscreen disable; floating enable; resize set 711 400; sticky enable; border pixel 4; move position 1193 px 16 px

# switch between floating/tiled layers
bindsym $mod+z focus mode_toggle
bindsym $mod+p focus parent
bindsym $mod+Shift+p focus child

# disables swayidle for fullscreen windows
# for_window [class=".*"] inhibit_idle fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout tabbed
bindsym $mod+y layout toggle split
bindsym $mod+u layout stacking

# app shortcuts
bindsym $mod+w exec firefox
bindsym $mod+b exec spotify
bindsym $mod+m exec evolution
bindsym $mod+Control+p exec pavucontrol
bindsym $mod+Control+r exec sh $HOME/.config/toggle_redshift.sh

# files, nvim, notebook, new note
bindsym $mod+e exec $TERMINAL -T "Files" -e $SHELL -i -c ranger
bindsym $mod+n exec $TERMINAL -T Neovim -e $SHELL -i -c nvim
bindsym $mod+Shift+n exec $TERMINAL -T Notebook -e $SHELL -i -c "ranger ~/Notebook"
bindsym $mod+Control+n exec $TERMINAL -T "Quick note" -e $SHELL -i -c "nvim ~/Notebook/new-(date +%Y%m%d-%H%M%S).md"

# lock
bindsym $mod+Escape exec $locker

# screenshot
bindsym --release $mod+Print exec $screenshot
bindsym --release $mod+Control+Print exec sh $HOME/.config/i3/screenshot.sh -s

# video capture
bindsym --release $mod+Shift+Print exec sh $HOME/.config/i3/videocapture.sh

# toggle tiling / floating
bindsym $mod+s floating toggle

# start mivy
bindsym $mod+d exec mivy

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# scratchpad
bindsym $mod+v move scratchpad
bindsym $mod+Shift+v scratchpad show

# reload with same wallpaper
bindsym $mod+Shift+c exec wpg -s $(wpg -c)

# reload with random wallpaper
bindsym $mod+Shift+r exec wpg -m

# modes
bindsym $mod+r mode "Resize mode"

# resize window (you can also use the mouse for that)
mode "Resize mode" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
    bindsym h resize shrink width 20 px
    bindsym j resize grow height 20 px
    bindsym k resize shrink height 20 px
    bindsym l resize grow width 20 px

# same bindings, but for the arrow keys
    bindsym Left resize shrink width 20 px
    bindsym Down resize grow height 20 px
    bindsym Up resize shrink height 20 px
    bindsym Right resize grow width 20 px

# back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bar {
    i3bar_command i3bar -t
    status_command "muse-status -p f2fdff -s 87aacb"
    # status_command i3status
    font pango: Cantarell 10
    mode dock
    modifier $mod
    separator_symbol "    "
    position top
    workspace_buttons yes
    height 32
    tray_output none
    colors {
        background $black
        statusline $white
        separator $inactive
        focused_workspace $black $black $white
        active_workspace $black $black $active
        inactive_workspace $black $black $inactive
        urgent_workspace $warning $warning $black
        binding_mode $black $black $warning
    }
}

exec --no-startup-id paplay "$HOME/Music/MuseSounds/Hello.wav"
