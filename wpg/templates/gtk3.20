/* Default color scheme */
@define-color color0 #10130c;
@define-color color1 #9A7E87;
@define-color color2 #A29992;
@define-color color3 #9A8D75;
@define-color color4 #BAC3B7;
@define-color color5 #CAACAD;
@define-color color6 #B1B4AF;
@define-color color7 #d9d8d8;
@define-color color8 #29321e;
@define-color color9 #da91a9;
@define-color color10 #e6c4a9;
@define-color color11 #d9bc86;
@define-color color12 #e5ffd5;
@define-color color13 #ffc7ca;
@define-color color14 #e1ffcc;
@define-color color15 #fffefe;

@define-color active #b7cbaa;
@define-color inactive #7d8c75;
@define-color bg_color @color0;
@define-color base_color @color0;
@define-color fg_color @color15;
@define-color text_color @color15;
@define-color selected_bg_color @color8;
@define-color selected_fg_color @color15;
@define-color tooltip_bg_color @color8;
@define-color tooltip_fg_color @color15;

/* colormap actually used by the theme, to be overridden in other css files */
@define-color theme_bg_color @bg_color;
@define-color theme_fg_color @fg_color;
@define-color theme_base_color @base_color;
@define-color theme_text_color @text_color;
@define-color theme_selected_bg_color @selected_bg_color;
@define-color theme_selected_fg_color @selected_fg_color;
@define-color theme_tooltip_bg_color @tooltip_bg_color;
@define-color theme_tooltip_fg_color @tooltip_fg_color;

/* shadow effects */
@define-color light_shadow @color0;
@define-color dark_shadow @color0;

/* misc colors used by gtk+ */
@define-color warning_color #ffaa00;
@define-color error_color #ff0000;
@define-color success_color #00ffaa;
@define-color info_color #00aaff;

@define-color info_fg_color @info_color;
@define-color info_bg_color @color0;
@define-color warning_fg_color @warning_color;
@define-color warning_bg_color @color0;
@define-color question_fg_color @color15;
@define-color question_bg_color @color0;
@define-color error_fg_color @error_color;
@define-color error_bg_color @color0;
@define-color link_color mix (@theme_selected_bg_color, black, 0.15);

/* widget colors*/
@define-color border_color @color0;
@define-color button_normal_color @color8;
@define-color button_info_color @selected_bg_color;
@define-color button_default_active_color @selected_bg_color;
@define-color entry_border_color @base_color;
@define-color frame_border_bottom_color @color8;
@define-color sel_color @inactive;
@define-color switch_bg_color @bg_color;
@define-color panel_bg_color @bg_color;
@define-color panel_fg_color @fg_color;
@define-color borders @color15;
@define-color scrollbar_trough @base_color;
@define-color scrollbar_slider_prelight mix(@scrollbar_trough, @theme_fg_color, 0.5);


/* osd */
@define-color osd_separator @color8
@define-color osd_fg @color15;
@define-color osd_bg @color0;

/* window manager colors */
@define-color wm_bg @theme_bg_color;
@define-color wm_title_focused @theme_fg_color;
@define-color wm_title_unfocused @theme_text_color;
@define-color wm_border_focused @border_color;
@define-color wm_border_unfocused @border_color;

