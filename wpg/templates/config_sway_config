set $mod Mod4

# exit sway
bindsym $mod+Shift+e exec paplay "$HOME/Drive/Music/MuseSounds/Goodbye.wav" && swaymsg exit

# some convenience variables
set $locker "sh $HOME/.config/sway/lock.sh"
set $lockWarningCmd "paplay $HOME/Drive/Music/MuseSounds/LockWarning.ogg && notify-send -u low -t 29500 -- 'Are you still there?' 'Your system will lock itself soon.'"
set $dpmsoff "swaymsg 'output * dpms off'"
set $dpmson "swaymsg 'output * dpms on'"

# startup apps
exec light -I &
exec mako &
exec sh $HOME/.config/wpg/wp_init.sh &
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec xhost si:localuser:root &
exec redshift &
exec swayidle -w timeout 270 $lockWarningCmd timeout 300 $locker timeout 305 $dpmsoff resume $dpmson before-sleep $locker &

# status bar stuff
# exec_always killall muse-status
# exec_always killall lemonbar
# exec_always muse-status -p fdfeff -s b5c0cb | lemonbar -B "#e5161813" -d -g x32 -f "Roboto:pixelsize=13" -f "MaterialDesignIcons:pixelsize=17" $o | sh &

# Use custom colors
set $inactive     #7c848c
set $warning      #ffaa00
set $warningAlpha #ffaa00c0
set $white        #fdfeff
set $black        #161813e5
set $fadedBlack   #161813c0
set $transparent  #00000000

set $TERMINAL alacritty
set $SHELL /usr/bin/fish

set $screenshot "sh $HOME/.config/sway/screenshot.sh"

# Window colors
# class                 border          backgr.         text            indicator       child_border
client.focused          $black          $black          $white          $inactive       $inactive
client.focused_inactive $black          $black          $inactive       $black          $black
client.unfocused        $black          $black          $inactive       $black          $black
client.urgent           $warning        $warning        $black          $warning        $warning
client.placeholder      $black          $black          $inactive       $black          $black
client.background       $black

# Font for window titles
font pango: Roboto 10
title_align center

# disable borders and titlebars
default_border normal 4
default_floating_border normal 4

# floating window size constraints
floating_minimum_size -1 x -1
floating_maximum_size 1856 x 1016

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

set $volume_up "$HOME/Drive/Music/MuseSounds/Volume.wav"
set $volume_down "$HOME/Drive/Music/MuseSounds/VolumeDown.wav"

# Pulse Audio controls
bindsym --locked XF86AudioRaiseVolume exec amixer -q sset Master 5%+ unmute && muse-status notify volume && paplay $volume_up
bindsym --locked XF86AudioLowerVolume exec amixer -q sset Master 5%- unmute && muse-status notify volume && paplay $volume_down
bindsym --locked XF86AudioMute exec amixer sset Master toggle && muse-status notify volume && paplay $volume_up # mute sound

# Media player controls
bindsym --locked XF86AudioPlay exec mpc toggle || playerctl play-pause
bindsym --locked XF86AudioNext exec mpc next || playerctl next
bindsym --locked XF86AudioPrev exec mpc cdprev || playerctl previous

# Sreen brightness controls
bindsym --locked XF86MonBrightnessUp exec light -A 2 && muse-status notify brightness
bindsym --locked XF86MonBrightnessDown exec light -U 2 && muse-status notify brightness

# Gaps between windows
gaps inner 16
bindsym $mod+equal gaps inner all set 32
bindsym $mod+minus gaps inner all set 0
hide_edge_borders none

# start a terminal
bindsym $mod+Return exec $TERMINAL

# start rofi
bindsym $mod+a exec rofi -show combi
bindsym $mod+Control+a exec rofi -show drun
bindsym $mod+Control+e exec rofi -show emoji -modi emoji
bindsym $mod+Control+w exec rofi -show window
bindsym $mod+Control+f exec rofi -show find -modi find:$HOME/.config/rofi/finder.sh
bindsym $mod+Control+c exec rofi -show calc

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# toggle split direction
bindsym $mod+o split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# floating video mode
bindsym $mod+i fullscreen disable; floating enable; resize set 356 200; sticky enable; border pixel 4; move position 1548 px -16 px; inhibit_idle open
bindsym $mod+Shift+i fullscreen disable; floating enable; resize set 711 400; sticky enable; border pixel 4; move position 1193 px -16 px; inhibit_idle open

# disables swayidle for fullscreen windows
for_window [class=".*"] inhibit_idle fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout tabbed
bindsym $mod+y layout toggle split
bindsym $mod+u layout stacking

# binary spacing
# start in opposite orientation from your monitor
default_orientation vertical
# toggles split at each new window
for_window [class=".*"] split toggle
# kill command resets the split
bindsym $mod+q split toggle; kill

# app shortcuts
bindsym $mod+w exec brave
bindsym $mod+e exec $TERMINAL -t ranger -e $SHELL -i -c ranger
bindsym $mod+b exec spotify
bindsym $mod+c exec rofi -show calc
bindsym $mod+m exec evolution
bindsym $mod+g exec sh $HOME/.config/sway/drive.sh
bindsym $mod+Control+r exec sh $HOME/.config/toggle_redshift.sh

# nvim, notebook, new note
bindsym $mod+n exec $TERMINAL -t nvim -e $SHELL -i -c nvim
bindsym $mod+Shift+n exec $TERMINAL -t nvim -e $SHELL -i -c nvim
bindsym $mod+Control+n exec $TERMINAL -t nvim -e $SHELL -i -c nvim ~/Notebook/new-(date +%Y%m%d-%H%M%S).md

# lock
bindsym $mod+Escape exec $locker

# screenshot
bindsym --release $mod+Print exec $screenshot

# video capture
bindsym --release $mod+Shift+Print exec sh $HOME/.config/sway/videocapture.sh

# dismiss mako notifications
bindsym Control+Escape exec makoctl dismiss

# toggle tiling / floating
bindsym $mod+s floating enable, border normal 4
bindsym $mod+Shift+s floating disable, border normal 4

# change focus between tiling / floating windows
bindsym $mod+Control+space focus mode_toggle

# focus the parent container
# bindsym $mod+a focus parent

# start mivy
bindsym $mod+d exec mivy

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# scratchpad
bindsym $mod+v move scratchpad
bindsym $mod+Shift+v scratchpad show

# reload with same wallpaper
bindsym $mod+Shift+c exec wpg -s $(wpg -c)

# reload with random wallpaper
bindsym $mod+Shift+r exec wpg -m

# modes
bindsym $mod+r mode "Resize mode"

# resize window (you can also use the mouse for that)
mode "Resize mode" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 20 px
        bindsym j resize grow height 20 px
        bindsym k resize shrink height 20 px
        bindsym l resize grow width 20 px

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 20 px
        bindsym Down resize grow height 20 px
        bindsym Up resize shrink height 20 px
        bindsym Right resize grow width 20 px

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

input "2:7:SynPS/2_Synaptics_TouchPad" {
    tap enabled
    natural_scroll enabled
}

input "*" {
    xkb_layout us
    # xkb_variant colemak
}

output eDP-1 {
    pos 0 0
}

output "*" {
    background "$HOME/.config/wpg/wallpapers/$(wpg -c)" fill
}

bar {
    # status_command "muse-status -m i3 -p fdfeff -s b5c0cb"
    status_command i3status
    mode dock
    modifier $mod
    separator_symbol "    "
    position top
    workspace_buttons yes
    height 32
    status_edge_padding 16
    tray_output none
    colors {
        background $fadedBlack
        statusline $white
        separator $inactive
        focused_workspace $fadedBlack $fadedBlack $white
        active_workspace $fadedBlack $fadedBlack $inactive
        inactive_workspace $fadedBlack $fadedBlack $inactive
        urgent_workspace $fadedBlack $fadedBlack $warning
        binding_mode $fadedBlack $fadedBlack $warning
    }
}

exec paplay "$HOME/Drive/Music/MuseSounds/Hello.ogg" &
